{% extends 'base.html.twig' %}

{% block title %} Üzenet: {{ message.id }} {% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="col-sm-2"></div>
        <div class="col-sm-8 jumbotron">
            <h1 class="display-1">Üzenet</h1>
            <h3>Feladó: {{ message.getWriterName() }} </h3>
            <h3>E-mail címe: {{ message.getWriterEmail() }} </h3>
            <h3> Szöveg: </h3>
            <p> {{ message.getMessageText() }} </p>
            <small> Elküldve: {{ message.getCreatedAt().format('Y. m. d. H:i:s') }} </small>
            <div class="mt-4">
                <a href="/messages" class="mt-4">
                    <button class="btn btn-primary">
                        Vissza
                    </button>
                </a>
            </div>
        </div>
        <div class="col-sm-2"></div>
    </div>
{% endblock %}
